{
  "description": "Example of using of XmlResult and FromXmlBody. It shows how to define which of the XML formatters DataContractSerializer or/and XmlSerializer to use for input and output in the Web Application controller actions.",
  "dependencies": {
    "Microsoft.AspNetCore.Mvc": "1.1.0",
    //"Microsoft.AspNetCore.Mvc.Formatters.Xml.Extensions": "1.1.0-*",
    "Microsoft.AspNetCore.Mvc.Formatters.Xml.Extensions": {
      "type": "build",
      "target": "project"
    },
    "Microsoft.AspNetCore.Routing": "1.1.0",
    "Microsoft.AspNetCore.Server.IISIntegration": "1.1.0",
    "Microsoft.AspNetCore.Server.Kestrel": "1.1.0",
    "Microsoft.Extensions.Configuration.EnvironmentVariables": "1.1.0",
    "Microsoft.Extensions.Configuration.FileExtensions": "1.1.0",
    "Microsoft.Extensions.Configuration.Json": "1.1.0",
    "Microsoft.Extensions.Logging": "1.1.0",
    "Microsoft.Extensions.Logging.Console": "1.1.0",
    "Microsoft.Extensions.Logging.Debug": "1.1.0",
    "Microsoft.Extensions.Options.ConfigurationExtensions": "1.1.0",
    "Microsoft.AspNetCore.Mvc.Formatters.Xml": "1.1.0"
  },

  "tools": {
    "Microsoft.AspNetCore.Server.IISIntegration.Tools": "1.0.0-preview2-final"
  },

  "frameworks": {
    "netcoreapp1.1": {
      "dependencies": {
        "Microsoft.NETCore.App": {
          "version": "1.1.0"
        }
      }
    },
    "net451": {}
    //,"netstandard1.6": {
    //  "dependencies": {
    //    "NETStandard.Library": {
    //      "version": "1.6.1"
    //    }
    //  }
    //}

  },

  "runtimes": {
    //"win10-x64": {},
    "win7-x64": {}
  },

  "buildOptions": {
    "emitEntryPoint": true,
    "preserveCompilationContext": true
  },

  "runtimeOptions": {
    "configProperties": {
      "System.GC.Server": true
    }
  },

  "publishOptions": {
    "include": [
      "wwwroot",
      "**/*.cshtml",
      "appsettings.json",
      "web.config"
    ]
  },

  "scripts": {
    "postpublish": [ "dotnet publish-iis --publish-folder %publish:OutputPath% --framework %publish:FullTargetFramework%" ]
  }
}
